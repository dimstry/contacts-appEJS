<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Contact</h2>
      <%if (!contact) {%>
        <div class="alert alert-danger" role="alert">
          Data Tidak ada <br> <a href="/contact" class="alert-link">kembali ke daftar contact</a>
        </div>
      <% }else {%>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= contact.noHp %></h6>
          <p class="card-text"><%= contact.email %></p>
          <a href="/contact/edit/<%= contact.nama %>" class="btn btn-sm btn-info mx-2">Edit</a>
          <a href="/contact/delate/<%= contact.nama %>" class="btn btn-sm btn-danger" onclick="return confirm('yakin?');">Hapus</a>
          <a href="/contact" class="card-link d-block m-2">Back</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>